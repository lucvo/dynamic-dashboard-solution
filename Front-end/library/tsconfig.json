{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "comfort-cores": [
        "dist/comfort-cores/comfort-cores",
        "dist/comfort-cores"
      ],
      "comfort-controls": [
        "dist/comfort-controls/comfort-controls",
        "dist/comfort-controls"
      ],
      "comfort-feature-tenants": [
        "dist/comfort-feature-tenants/comfort-feature-tenants",
        "dist/comfort-feature-tenants"
      ],
      "@comfort/controls/*": [
        "projects/comfort-controls/src/*"
      ],
      "@comfort/core/*": [
        "projects/comfort-cores/src/*"
      ],
      "@comfort/tenant/*": [
        "projects/comfort-feature-tenants/src/*"
      ],
      "@comfort/workflows/*": [
        "projects/comfort-feature-workflows/src/*"
      ],
      "@comfort/common/*": [
        "projects/comfort-feature-common/src/*"
      ],
      "@comfort/questionnaires/*": [
        "projects/comfort-feature-questionnaires/src/*"
      ],
      "@comfort/processes/*": [
        "projects/comfort-processes/src/*"
      ],
      "@comfort/checks/*": [
        "projects/comfort-checks/src/*"
      ],
      "@comfort/ui-test/*": [
        "projects/comfort-ui-test/src/*"
      ],
      "@comfort/ou/*": [
        "projects/comfort-ou/src/*"
      ],
      "@comfort/risk/*": [
        "projects/comfort-risks/src/*"
      ],
      "dynamic-core": [
        "dist/dynamic-core/dynamic-core",
        "dist/dynamic-core"
      ]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}